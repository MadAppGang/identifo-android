<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLoginWithPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/loginWithPhoneNumber"
        style="@style/PhoneButtonStyle"
        app:layout_constraintEnd_toEndOf="@+id/buttonLoginWithUsername"
        app:layout_constraintStart_toStartOf="@+id/buttonLoginWithUsername"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoginWithUsername" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLoginWithGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/loginWithGmail"
        style="@style/GmailButtonStyle"
        app:layout_constraintEnd_toEndOf="@+id/buttonLoginWithUsername"
        app:layout_constraintStart_toStartOf="@+id/buttonLoginWithUsername"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoginWithPhoneNumber" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLoginWithUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/loginWithEmail"
        style="@style/EmailButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/buttonLoginWithFacebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonLoginWithGoogle"
        app:layout_constraintStart_toStartOf="@+id/buttonLoginWithGoogle"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoginWithGoogle" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/buttonLoginWithUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>