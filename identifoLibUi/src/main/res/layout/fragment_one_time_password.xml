<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_otp_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.prytula.identifolibui.OtpCodeView
        android:id="@+id/editTextOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:otpTextColor="@android:color/darker_gray"
        app:otpLineColor="@android:color/darker_gray"
        app:otpLineWidth="2dp"
        app:otpTextNumber="6"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textViewOtpTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pleaseEnterTheCode"
        android:textSize="@dimen/text16"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/editTextOtp"
        app:layout_constraintEnd_toEndOf="@+id/editTextOtp"
        app:layout_constraintStart_toStartOf="@+id/editTextOtp" />

    <Button
        android:id="@+id/buttonResendTheCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/sendTheCode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewResentCountTimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text16"
        app:layout_constraintEnd_toEndOf="@+id/editTextOtp"
        app:layout_constraintStart_toStartOf="@+id/editTextOtp"
        app:layout_constraintTop_toBottomOf="@+id/editTextOtp" />

</androidx.constraintlayout.widget.ConstraintLayout>