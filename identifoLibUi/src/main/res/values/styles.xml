<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- font text styles -->
    <style name="NunitoRegular">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="NunitoSemiBold">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="NunitoBold">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="ExoBold">
        <item name="android:fontFamily">@font/exo_bold</item>
    </style>

    <!-- color text styles -->
    <style name="PrimaryTextStyle" parent="NunitoRegular">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryTextStyle" parent="NunitoRegular">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ThirdTextStyle" parent="ExoBold">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- image view styles -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- button styles -->
    <style name="CommonButtonStyle">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ColorfulButtonStyle" parent="CommonButtonStyle">
        <item name="android:textColor">@color/button_white_text_color</item>
        <item name="android:drawableTint">@color/button_white_text_color</item>
    </style>

    <style name="ColorlessButtonStyle" parent="CommonButtonStyle">
        <item name="android:textColor">@color/button_dark_text_color</item>
        <item name="android:drawableTint">@color/button_dark_text_color</item>
    </style>

    <style name="PhoneButtonStyle" parent="ColorfulButtonStyle">
        <item name="android:drawableLeft">@drawable/ic_phone</item>
        <item name="android:backgroundTint">@color/button_phone_color</item>
    </style>

    <style name="EmailButtonStyle" parent="ColorfulButtonStyle">
        <item name="android:drawableLeft">@drawable/ic_email</item>
        <item name="android:backgroundTint">@color/button_email_color</item>
    </style>

    <style name="GmailButtonStyle" parent="ColorlessButtonStyle">
        <item name="android:drawableLeft">@drawable/googleg_standard_color_18</item>
        <item name="android:backgroundTint">@color/button_gmail_color</item>
    </style>

    <style name="FacebookButtonStyle" parent="ColorfulButtonStyle">
        <item name="android:drawableLeft">@drawable/com_facebook_button_icon</item>
        <item name="android:backgroundTint">@color/button_facebook_color</item>
    </style>

    <style name="TwitterButtonStyle" parent="ColorfulButtonStyle">
        <item name="android:drawableLeft">@drawable/tw__ic_logo_default</item>
        <item name="android:backgroundTint">@color/button_twitter_color</item>
    </style>

</resources>