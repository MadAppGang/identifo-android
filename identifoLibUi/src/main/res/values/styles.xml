<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommonButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:drawableTint">@color/button_text_color</item>
    </style>

    <style name="PhoneButtonStyle" parent="CommonButtonStyle">
        <item name="android:drawableLeft">@drawable/ic_phone</item>
        <item name="android:backgroundTint">@color/button_phone_color</item>
    </style>

    <style name="EmailButtonStyle" parent="CommonButtonStyle">
        <item name="android:drawableLeft">@drawable/ic_email</item>
        <item name="android:backgroundTint">@color/button_email_color</item>
    </style>

</resources>