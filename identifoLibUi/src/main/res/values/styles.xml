<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- font text styles -->
    <style name="NunitoRegular">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="NunitoSemiBold">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="NunitoBold">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="ExoBold">
        <item name="android:fontFamily">@font/exo_bold</item>
    </style>

    <!-- color text styles -->
    <style name="PrimaryRegularTextStyle" parent="NunitoRegular">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrimaryBoldTextStyle" parent="NunitoBold">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryRegularTextStyle" parent="NunitoRegular">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ThirdBoldTextStyle" parent="ExoBold">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- image view styles -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- button styles -->
    <style name="CommonButtonStyle">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ColorfulButtonStyle" parent="CommonButtonStyle">
        <item name="android:textColor">@color/button_white_text_color</item>
        <item name="android:drawableTint">@color/button_white_text_color</item>
    </style>

    <style name="ColorlessButtonStyle" parent="CommonButtonStyle">
        <item name="android:textColor">@color/button_dark_text_color</item>
        <item name="android:drawableTint">@color/button_dark_text_color</item>
    </style>

    <style name="ColoredButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/selector_colorful_background_button</item>
        <item name="android:textColor">@color/selector_colorful_text_button</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="BorderedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

</resources>