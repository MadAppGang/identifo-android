<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IdentifoStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/identifoSystemStatusBarColor</item>
        <item name="android:navigationBarColor">@color/identifoSystemNavigationBarColor</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@color/identifoBackgroundNightColor</item>
    </style>

    <!-- font text styles -->
    <style name="NunitoRegular">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="NunitoSemiBold">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="NunitoBold">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="ExoBold">
        <item name="android:fontFamily">@font/exo_bold</item>
    </style>

    <!-- color text styles -->
    <style name="PrimaryRegularTextStyle" parent="NunitoRegular">
        <item name="android:textColor">@color/identifoPrimaryTextNightColor</item>
    </style>

    <style name="PrimaryBoldTextStyle" parent="NunitoBold">
        <item name="android:textColor">@color/identifoPrimaryTextNightColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryRegularTextStyle" parent="NunitoRegular">
        <item name="android:textColor">@color/identifoSecondaryTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TertiaryRegularTextStyle" parent="NunitoRegular">
        <item name="android:textColor">@color/identifoTertiaryTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FourthBoldTextStyle" parent="ExoBold">
        <item name="android:textColor">@color/identifoPrimaryTextNightColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- separator view styles -->
    <style name="SeparatorStyle">
        <item name="android:background">@color/identifoSeparatorNightColor</item>
    </style>

    <!-- image view styles -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="IdentifoLogoStyle">
        <item name="tint">@color/identifoPrimaryTextNightColor</item>
    </style>

    <!-- button styles -->
    <style name="CommonButtonStyle">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/selector_primary_button_background</item>
        <item name="android:textColor">@color/selector_primary_night_button_text_color</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/selector_secondary_night_button_background</item>
        <item name="android:textColor">@color/identifoSecondaryNightButtonTextColor</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="TertiaryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@color/identifoTertiaryNightButtonTextColor</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <!-- text input layout -->
    <style name="BorderedInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="boxStrokeColor">@color/identifoInputTextNightColor</item>
        <item name="hintTextColor">@color/identifoInputTextNightColor</item>
    </style>

    <style name="BorderedEditText">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

</resources>